<odoo>
    <record id="view_cliente_form" model="ir.ui.view">
        <field name="name">mi_modulo.cliente.form</field>
        <field name="model">mi_modulo.cliente</field>
        <field name="arch" type="xml">
            <form string="Cliente">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="direccion"/>
                        <field name="correo"/>
                        <field name="telefono"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_cliente_tree" model="ir.ui.view">
        <field name="name">mi_modulo.cliente.tree</field>
        <field name="model">mi_modulo.cliente</field>
        <field name="arch" type="xml">
            <tree string="Clientes">
                <field name="nombre"/>
                <field name="correo"/>
                <field name="telefono"/>
            </tree>
        </field>
    </record>

    <record id="action_cliente" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">mi_modulo.cliente</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_cliente_tree"/>
    </record>

    <menuitem id="menu_mi_modulo" name="Mi MÃ³dulo"/>

    <menuitem id="menu_cliente" name="Clientes" parent="menu_mi_modulo" action="action_cliente"/>
</odoo>
