<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_pedido" model="ir.actions.act_window">
        <field name="name">Pedido</field>
        <field name="res_model">tienda.deportes.pedido</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Creamos un Pedido.
            </p>
        </field>
    </record>

    <record id="view_tree_pedido" model="ir.ui.view">
        <field name="name">tienda.deportes.pedido.tree</field>
        <field name="model">tienda.deportes.pedido</field>
        <field name="arch" type="xml">
            <tree string="Pedidos">
                <field name="cliente_id"/>
                <field name="fecha_pedido"/>
                <field name="cantidad"/>
            </tree>
        </field>
    </record>

    <record id="view_form_pedido" model="ir.ui.view">
        <field name="name">tienda.deportes.pedido.form</field>
        <field name="model">tienda.deportes.pedido</field>
        <field name="arch" type="xml">
            <form string="Pedido">
                <sheet>
                    <group>
                        <field name="cliente_id"/>
                        <field name="producto_ids"/>
                        <field name="cantidad"/>
                        <field name="fecha_pedido"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
