<odoo>
    <!-- Vista de Formulario -->
    <record id="view_form_mi_modulo" model="ir.ui.view">
        <field name="name">mi.modulo.form</field>
        <field name="model">mi.modulo</field>
        <field name="arch" type="xml">
            <form string="Mi Módulo">
                <group>
                    <field name="name"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Vista de Árbol (Lista) -->
    <record id="view_tree_mi_modulo" model="ir.ui.view">
        <field name="name">mi.modulo.tree</field>
        <field name="model">mi.modulo</field>
        <field name="arch" type="xml">
            <tree string="Mi Modulo">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Acción para abrir el modelo -->
    <record id="action_mi_modulo" model="ir.actions.act_window">
        <field name="name">Mi Módulo</field>
        <field name="res_model">mi.modulo</field>
        <field name="view_mode">form,tree</field>
    </record>

    <!-- Menú para acceder al modelo -->
    <menuitem id="mi_modulo_menu" name="Mi Modulo" action="action_mi_modulo"/>
</odoo>
